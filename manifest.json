{
  "name": "Tradingworks Plus",
  "version": "1.1.2",
  "description": "Extension to facilitate the usability of the TradingWorks platform for managing points between work shifts.",
  "icons": { 
    "16": "assets/favicon16.png",
    "32": "assets/favicon32.png",
    "48": "assets/favicon48.png"
  },
  "manifest_version": 3,
  "permissions": ["activeTab", "tabs", "storage", "scripting", "notifications", "offscreen"],
  "host_permissions": ["https://app.tradingworks.net/*", "https://wppp-api-d0eaabc3aee0.herokuapp.com/*"],
  "action": {
    "default_popup": "./popup.html",
    "default_title": "Tradingworks"
  },
  "background": {
    "service_worker": "./assets/scripts/background.js",
    "type": "module"
  },
  "options_page": "./config/index.html",
  "homepage_url": "https://github.com/ErnaneJ/tradingworks-plus",
  "privacy_policy": "https://github.com/ErnaneJ/tradingworks-plus/blob/master/doc/privacy_policy/en.md",
}